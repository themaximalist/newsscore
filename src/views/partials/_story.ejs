<% let klass = "" %>
<% if (story.score >= 900) { %>
<% klass = 'headline-900'; %>
<% } else if (story.score >= 800) { %>
<% klass = 'headline-800'; %>
<% } else if (story.score >= 700) { %>
<% klass = 'headline-700'; %>
<% } else if (story.score >= 600) { %>
<% klass = 'headline-600'; %>
<% } %>
<div class="mb-4">
    <a class="headline <%- klass %>" href="<%- story.url %>" target="_blank">
        <span class="score"><%- (story.score / 100).toFixed(1) %></span>
        <h2 class="title inline">
            <%- story.headline || story.title %>
        </h2>
        <span class="source text-base italic text-gray-400"><%- story.source %></span>
    </a>
    <a href="/story/<%= story.id %>" class="font-mono text-base italic text-gray-400 font-light">
        #
    </a>
</div>
